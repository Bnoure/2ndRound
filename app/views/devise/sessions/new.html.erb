<h2 class="login-title">Connexion</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
  <div class="flex-column">
    <%= f.label :email, "Email", class: "form-label" %>
    <%= f.input :email,
                required: false,
                autofocus: true,
                label_html: { class: "hidden-label" },
                input_html: { autocomplete: "email", class: "input", placeholder: "Entrez votre email" } %>
  </div>

  <div class="flex-column">
    <%= f.label :password, "Mot de passe", class: "form-label" %>
    <%= f.input :password,
                required: false,
                label_html: { class: "hidden-label" },
                input_html: { autocomplete: "current-password", class: "input", placeholder: "Entrez votre mot de passe" } %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="flex-row checkbox-container">
      <%= f.input :remember_me, as: :boolean, wrapper: false, label: false, input_html: { class: "checkbox-input" } %>
      <%= f.label :remember_me, "Se souvenir de moi", class: "checkbox-label" %>
    </div>
  <% end %>

<div class="form-actions">
  <%= f.button :submit, "Se connecter", class: "button-submit" %>
</div>

<div class="link-container">
  <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name), class: "span forgot-password" %>
  <p class="p right-aligned">Vous n'avez pas de compte ? <%= link_to "Inscrivez-vous", new_registration_path(resource_name), class: "span sign-up" %></p>
</div>
<% end %>
